server {
    listen 80;
    server_name localhost;

    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ =404;

        sub_filter_once off;
        sub_filter 'MATOMO_URL' '${MATOMO_URL}';
        sub_filter 'MATOMO_SITE_ID' '${MATOMO_SITE_ID}';
    }
}